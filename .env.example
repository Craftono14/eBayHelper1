# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ebay_helper"

# Application
NODE_ENV="development"
PORT=3000

# Authentication
JWT_SECRET="your-secret-key-min-32-chars-recommended"
BCRYPT_SALT_ROUNDS=10

# eBay API Credentials
EBAY_CLIENT_ID="your-ebay-app-id"
EBAY_CLIENT_SECRET="your-ebay-cert-id"
# RuName (Redirect URL Name) from eBay Developer portal - REQUIRED for OAuth
EBAY_OAUTH_REDIRECT_URI="your-ebay-runame-or-http://localhost:3000/api/ebay/callback"
EBAY_SANDBOX_MODE="true"
# Where to redirect user after successful eBay OAuth (frontend URL)
EBAY_CLIENT_POST_AUTH_REDIRECT="http://localhost:5173/saved-searches"
# OAuth scopes (space-separated)
EBAY_OAUTH_SCOPES="https://api.ebay.com/oauth/api_scope/shopping https://api.ebay.com/oauth/api_scope/sell.account.readonly"

# eBay Account Deletion Notification Compliance (REQUIRED for production)
# Verification token for validating eBay notifications (32-80 characters, alphanumeric/underscore/hyphen only)
EBAY_NOTIFICATION_VERIFICATION_TOKEN="your-verification-token-min-32-chars-required"
# Full endpoint URL where eBay will send account deletion notifications (MUST be HTTPS in production)
EBAY_NOTIFICATION_ENDPOINT_URL="https://your-domain.com/api/ebay/account-deletion/notification"

# eBay Service (optional - for background workers)
EBAY_ACCESS_TOKEN="your-access-token"

# Add other environment variables as needed
