{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strict": false,
    "composite": false,
    "incremental": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.tsx", "./frontend", "./frontend/**/*", "./node_modules", "./dist"]
}
